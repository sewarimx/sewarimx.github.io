extends ../layouts/default

block head
  title= item.product.name

block body
  #it.segment
    .md-flex
      +slider(`/${item.product.key}/`, item.slides.length).product-slider
        each image in item.slides
          div(style=`background-image:url(${image});`)
      aside
        h1.biggest= item.product.name
        ul.reset
          li.f-400!= item.label

          if item.social
            li: a.media.link(href=item.social.url target='_blank')
              span.icon: +iconImage('instagram', true)
              span #{item.social.display}

        #prod

        h3 Detalles
        ul.reset
          if item.profile
            li!= item.profile

          if item.quantity
            li!= item.quantity

        if item.description
          p!= item.description

        if item.our_suggestion
          p!= item.our_suggestion

        if item.additional_info
          p: b.small!= item.additional_info

block scripts
  script window.product$ = !{JSON.stringify(item.product)};
  includeTag(src='prods.js')
