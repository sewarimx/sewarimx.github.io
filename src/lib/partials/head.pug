<![endif]-->

if pkg.description
  meta(name='description' content=pkg.description)
  meta(property='og:description' content=pkg.description)

if pkg.author && pkg.showProfile === true
  meta(name='author' content=pkg.author.name)
  meta(property='og:type' content='profile')

  if pkg.author.name
    meta(property='og:profile:first_name' content=pkg.author.name.split(' ')[0])
    meta(property='og:profile:last_name' content=pkg.author.name.split(' ')[1])

  if pkg.author.email
    meta(property='og:profile:username' content=pkg.author.email.split('@')[0])

  meta(property='og:url' content=pkg.author.url)
  meta(property='og:image' content=pkg.author.image)

block styles
  includeTag(src='styles.css')

block meta
  if title
    meta(name='og:title' content=title)

block head
  if title
    title= title

if env.UA_TOKEN && env.NODE_ENV === 'production'
  script.
