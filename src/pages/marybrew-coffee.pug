---
product: !include ../products/marybrew-coffee.yml
---

extends ../lib/layouts/default

block head
  title= product.name

block body
  #it.segment
    .md-flex
      +slider('/marybrew-coffee/', 3).product-slider
        div(style='background-image:url(images/coldbrew_bottle.jpg);')
        div(style='background-image:url(images/coldbrew_display.jpg);')
        div(style='background-image:url(images/coldbrew_serving.jpg);')
      aside
        h1.biggest= product.name
        ul.reset
          li.f-400!= product.label

          if product.profile
            li!= product.profile

          if product.quantity
            li!= product.quantity

        button.nosl.solid-shadow(data-buy='marybrew-coffee') SHOP NOW

        if product.description
          p!= product.description

        if product.our_suggestion
          p!= product.our_suggestion

        if product.additional_info
          p: b.small!= product.additional_info
